{
	"manifest_version": 2,
	"name": "Wallpaper from Url (for ChromeOS)",
	"description": "Sets your wallpaper in ChromeOS to a image url. Works great with random wallpaper urls, like Unsplash.",
	"homepage_url": "https://github.com/rpbritton/wallpaper-from-url-for-chromeos/",
	"version": "1.0",
	"permissions": [
		"wallpaper",
		"alarms",
		"contextMenus",
		"storage"
	],
	"icons": {
		"16": "img/icon16.png",       
		"48": "img/icon48.png",       
		"128": "img/icon128.png",     
		"254": "img/icon254.png"  
	},
	"background": {
		"persistant": false,
		"scripts": ["background.js"]
	}
}
